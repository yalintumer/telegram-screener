# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get your chat ID from @userinfobot on Telegram
TELEGRAM_CHAT_ID=your_chat_id_here

# Data API Configuration
# Currently only yfinance is supported (FREE & UNLIMITED - no API key needed)
API_PROVIDER=yfinance
# API_TOKEN is not needed for yfinance

# Logging
LOG_LEVEL=INFO

# VM SSH Configuration (Optional - for remote deployment)
# VM_SSH_HOST=your_vm_ip_or_hostname
# VM_SSH_USER=root
# VM_SSH_PROJECT_PATH=~/telegram-screener

